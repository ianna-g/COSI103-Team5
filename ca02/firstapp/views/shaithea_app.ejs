<!DOCTYPE html>
<html lang="en">
    
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Shaithea's App</title>
    <link rel="stylesheet" href="/stylesheets/shaithea.css">
    <script type="text/javascript" src="/javascript/shaithea.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
</head>

<h1>Bedtime Story Generator!</h1>
<h3>Shaithea Alam</h3>

<div id="colContainer">
    <div id="rowContainer">
      <div id="storyContainer">
        <!-- <input id="contentBox" type="text" placeholder="Content For Your Story" name="storyContent" /> -->
        <textarea
        id="contentBox"
        placeholder="Content For Your Story..."
        name="storyContent"
      ></textarea>
      <br/>
        <div id="inputButtonsContainer">
          <button id="clearFields" onclick="clearFields()">Clear</button>
          <button id="generate" onclick="generateStory()">Generate Story</button>
        </div>

        <div id="errors"></div>
      </div>

      <hr>
      <div id="storyCatalog">
        <h3>Saved Stories</h3>
        <div id="displayItemContainer">
          <% stories.forEach(story => { %>
            <a href="/shaithea/bedtime_story/<%= story._id %>"><%= story.name %></a>
            <a href="/shaithea/remove/<%=story._id %>">
              <i class="bi bi-trash"></i>
            </a>
            <br>
            <% }) %>
        </div>
      </div>
    </div>
    <div>
      <hr>
      <a href="/shaithea/about">About this app</a>
    </div>
  </div>


<body>
    
</body>

</html>